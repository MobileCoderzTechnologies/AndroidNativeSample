<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidnativesample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.androidnativesample.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kwicpic"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.androidnativesample.onboard.ui.activity.SetUpProfileActivity"
            android:exported="true"
            android:theme="@style/ThemeFullScreen"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity
            android:name="com.androidnativesample.onboard.ui.activity.GetStartedActivity"
            android:exported="true" />
        <activity
            android:name="com.androidnativesample.onboard.ui.activity.OtpVerificationActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.androidnativesample.onboard.ui.activity.EmailVerificationActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name="com.androidnativesample.onboard.ui.activity.TermsConditionActivity"
            android:exported="true" />
        <activity
            android:name="com.androidnativesample.onboard.ui.activity.LoginSignupActivity"
            android:exported="true" />
        <activity android:name="com.androidnativesample.onboard.ui.activity.WalkthroughActivity" />
        <activity
            android:name="com.androidnativesample.onboard.ui.activity.SplashActivity"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.androidnativesample.MainActivity" />
    </application>

</manifest>